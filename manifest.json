{
  "manifest_version": 2,

  "name": "4ye Image Collector",
  "description": "Tiny screenshot tool.",
  "version": "0.0.1",

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "<all_urls>",
    "http://img.4ye.me/",
    "http://up.qiniu.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],

      "js": [
        "base.js",
        "deps.js",
        "page.js"
      ],
      "css": [
        "page.css"
      ]
    }
  ],
  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "*"
  ]
}
